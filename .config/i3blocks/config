# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=~/.config/i3blocks/scripts/$BLOCK_NAME/$BLOCK_NAME
full_text=:|:
separator=false
separator_block_width=15
markup=pango
THRESHOLD_1=30
THRESHOLD_2=50
THRESHOLD_3=70
THRESHOLD_4=200
INVERSE_THRESHOLD=false
COLOR_1=#A8FF00
COLOR_2=#FFAE00
COLOR_3=#FFF600
COLOR_4=#FF0000

[brightness]
#LABEL=‚òÄÔ∏èüîÜ
#HIGHLIGHT=true
#MIN_BRIGHTNESS=0.2 # ratio
#STEP=10
format=json
interval=once
signal=10

[volume]
#LABEL=‚ô™
#STEP=10
format=json
interval=once
signal=10

[battery]
#BAT_NUMBER=0
#CPU_NUMBER=0
format=json
interval=5
INVERSE_THRESHOLD=true

[datetime]
#LABEL=üìÜ
COLOR=#151820
BGCOLOR=#6db9f7
interval=5

